@{
    ViewBag.Title = "Marcas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Ventana para consulta -->
<ol class="breadcrumb mb-4 mt-4">
    <li class="breadcrumb-item"><a href="index.html">Maestros</a></li>
    <li class="breadcrumb-item active">Marcas</li>
</ol>

<div class="card mb-4">
    <div class="card-header">
        <i class="fas fa-table me-1"></i> Consulta Marcas
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-sm-12">
                <button class="btn btn-success"
                        type="button"
                        onclick="ventana(null)">
                    Nuevo registro
                </button>
            </div>
        </div>

        <hr />
        <table id="tabla"
               class="display responsive"
               style="width:100%">
            <thead>
                <tr>
                    <th>Descripcion</th>
                    <th>Estatus</th>
                    <th>Imagen</th>
                    <th></th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>
</div>


<!-- Ventana para registrar -->
<div class="modal fade"
     id="formRegistra"
     data-bs-backdrop="static"
     data-bs-keyboard="false"
     tabindex="-1"
     aria-labelledby="staticBackdropLabel"
     aria-hidden="true">

    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header bg-dark text-white">
                <h5 class="modal-title"
                    id="idLabel">
                    Marcas
                </h5>
                <button type="button"
                        class="close"
                        data-bs-dismiss="modal"
                        aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <div class="modal-body">
                <input id="txtidmarca"
                       type="hidden"
                       value="0" />
                <form id="formTexto">

                    <div class="row">
                        <div class="col-sm-12">
                            <div class="form-group">
                                <label for="txtdescripcion">Descripcion</label>
                                <input type="text"
                                       class="form-control required"
                                       id="txtdescripcion"
                                       name="descripcion"
                                       autocomplete="off">
                            </div>
                        </div>
                    </div>

                    <div class="row mt-2">
                        <div class="col-sm-12">
                            <div class="form-group">
                                <label for="fileImagen">Imagen</label>
                                <input type="file"
                                       class="form-control"
                                       id="fileImagen"
                                       accept="image/*"
                                       required />
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-sm-12">
                            <div class="form-group">
                                <label for="cboEstatus">Estatus</label>
                                <select id="cboEstatus" class="form-select">
                                    <option value="1">Activo</option>
                                    <option value="0">No Activo</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </form>
            </div>

            <div class="modal-footer">
                <button type="button"
                        class="btn btn-danger"
                        data-bs-dismiss="modal">
                    Cerrar
                </button>

                <button type="button"
                        class="btn btn-primary"
                        onclick="GuardarRegistro()">
                    Guardar
                </button>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script>
        var tabladata;

        $(document).ready(function () {
                tabladata = $('#tabla').DataTable({
                    responsive:true,
                    "ajax": {
                        "url": '@Url.Action("consultaMarcas", "Marcas")',
                        "type": "GET",
                        "datatype": "json"
                    },
                    "columns": [
                        {
                            "data": "Imagen", "render": function (data) {
                                if (data != null)
                                    return `<img src="data:image/jpeg;base64,${data}" width="50" height="50"/>`;
                                else
                                    return "Sin imagen";
                            }
                        },

                        { "data": "Descripcion" },
                        {
                            "data": "Estatus", "render": function (data) {
                                if (data) {
                                    return '<span class="badge bg-success">Activo</span>'
                                } else {
                                    return '<span class="badge bg-danger">No Activo</span>'
                                }
                            }
                        },

                        {
                            "data": "IdMarca", "render": function (data, type, row, meta) {

                                return $("<button>").addClass("btn btn-primary btn-editar btn-sm").append(
                                    $("<i>").addClass("fas fa-pen")
                                ).attr({ "data-informacion": JSON.stringify(row) })[0].outerHTML
                                +
                                $("<button>").addClass("btn btn-danger btn-borrar btn-sm ms-2").append(
                                    $("<i>").addClass("fas fa-trash")
                                ).attr({ "data-informacion": JSON.stringify(row) })[0].outerHTML;

                            },
                            "orderable": false,
                            "searchable": false,
                            "width": "90px"
                        }

                    ],
                    "language": {
                        "url": "//cdn.datatables.net/plug-ins/1.10.25/i18n/Spanish.json"
                    }
                });
        });

        $(document).on('click', '.btn-editar', function (event) {
            var json = $(this).data("informacion")

            ventana(json)
        });

        function ventana(json) {
            $("#txtidmarca").val(0);
            $("#txtdescripcion").val("");
            $("#cboEstatus").val(1);

            if (json != null) {

                $("#txtidmarca").val(json.IdMarca);
                $("#txtdescripcion").val(json.Descripcion);
                $("#cboEstatus").val(json.Activo == true ? 1 : 0);
            }

            $('#formRegistra').modal('show');
        }

        $(document).on('click', '.btn-borrar', function (event) {
            var json = $(this).data("informacion")

            jQuery.ajax({
                url: '@Url.Action("borrarMarcas", "Marcas")',
                type: "POST",
                data: JSON.stringify({ id: json.IdMarca}),
                dataType: "json",
                contentType: "application/json; charset=utf-8",
                success: function (data) {

                    if (data.resultado) {
                        tabladata.ajax.reload();
                    } else {
                        alert("Ocurrio un error :(")
                    }
                },
                error: function (error) {
                    console.log(error)
                },
                beforeSend: function () {

                },
            });
        });


        function GuardarRegistro() {
            var fileInput = document.getElementById("fileImagen");
            var file = fileInput.files[0];

            if (file) {
                var reader = new FileReader();
                reader.onload = function (e) {
                    var base64Image = e.target.result.split(',')[1]; // eliminar encabezado

                    enviaMarca(base64Image);
                };
                reader.readAsDataURL(file);
            } else {
                enviarMarca(null); // sin imagen
            }
        }

        function enviaMarca(imagenBase64) {
            var request = {
                objeto: {
                    IDMarca: $("#txtidmarca").val(),
                    Descripcion: $("#txtdescripcion").val(),
                    Activo: parseInt($("#cboEstatus").val()) == 1,
                    ImagenBase64: imagenBase64
                }
            };

            jQuery.ajax({
                url: '@Url.Action("InsertaMarcas", "Marcas")',
                type: "POST",
                data: JSON.stringify(request),
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                success: function (data) {
                    if (data.resultado) {
                        tabladata.ajax.reload();
                        $('#formRegistra').modal('hide');
                    } else {
                        alert("Ocurrió un error :(");
                    }
                }
            });
        }


    </script>

}


